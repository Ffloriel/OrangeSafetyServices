<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.floriel.orangesafetyservices.fragments.HealthFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:id="@+id/cardView"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_card"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack John"
                    android:id="@+id/username"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_display_1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="06 43 57 43 93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_number"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_below="@+id/username"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/text_subheading" />

                <TextView
                    android:text="Today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/date_info"
                    android:elevation="0dp"
                    android:layout_below="@+id/user_number"
                    android:layout_alignParentStart="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/colorTextSecondary" />

                <TextView
                    android:text="75bpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heartRateBpm"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2" />

                <ImageView
                    app:srcCompat="@drawable/ic_favorite_red_24dp"
                    android:id="@+id/imageView2"
                    android:cropToPadding="false"
                    android:scaleType="fitStart"
                    android:layout_marginTop="9dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/date_info"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Health informations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="@string/health_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="17dp" />

            </RelativeLayout>

            <Button
                android:text="EDIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_card"
                android:id="@+id/editButton"
                style="@android:style/Widget.Material.Button.Borderless"
                android:textAlignment="textStart"
                android:textColor="@color/colorAccent"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
